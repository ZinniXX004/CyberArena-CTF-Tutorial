<Window x:Class="CyberAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberAdmin" Height="600" Width="900"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <!-- Main Container with Rounded Corners and Border -->
    <Border Background="#121212" BorderBrush="#333333" BorderThickness="1" CornerRadius="5">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Custom Title Bar -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
                <RowDefinition Height="*"/>    <!-- Main Content -->
                <RowDefinition Height="Auto"/> <!-- Footer logs -->
            </Grid.RowDefinitions>

            <!-- 1. Custom Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#00FF41" Width="10" Height="10" CornerRadius="5" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#00FF41" BlurRadius="10" ShadowDepth="0"/>
                        </Border.Effect>
                    </Border>
                    <TextBlock Text="CYBER_ARENA // ADMIN_CONSOLE" 
                               FontFamily="Consolas" FontSize="16" FontWeight="Bold" 
                               Foreground="#E0E0E0"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="_" Click="MinimizeButton_Click" Width="30" Height="30" 
                            Background="Transparent" Foreground="#888888" BorderThickness="0"
                            FontFamily="Consolas" FontSize="16" FontWeight="Bold"/>
                    <Button Content="X" Click="CloseButton_Click" Width="30" Height="30" 
                            Background="Transparent" Foreground="#FF5555" BorderThickness="0"
                            FontFamily="Consolas" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <!-- 2. Connection Status Panel -->
            <Border Grid.Row="1" Background="#1E1E1E" BorderBrush="#00FF41" BorderThickness="0,0,0,2" Margin="0,0,0,20" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="SERVER_STATUS :: " FontFamily="Consolas" Foreground="#888888"/>
                        <TextBlock x:Name="StatusText" Text="CONNECTING..." FontFamily="Consolas" FontWeight="Bold" Foreground="#00FF41"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="UPTIME :: " FontFamily="Consolas" Foreground="#888888"/>
                        <TextBlock x:Name="ClockText" Text="00:00:00" FontFamily="Consolas" Foreground="#E0E0E0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 3. The Scoreboard (Modern DataGrid) -->
            <DataGrid x:Name="ScoreGrid" Grid.Row="2" 
                      AutoGenerateColumns="False" 
                      Background="Transparent" 
                      RowBackground="Transparent"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#333333"
                      VerticalGridLinesBrush="Transparent"
                      BorderThickness="0"
                      Foreground="#E0E0E0"
                      FontFamily="Consolas" FontSize="14">

                <DataGrid.Resources>
                    <!-- Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#00FF41"/>
                        <Setter Property="Padding" Value="10,10"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#333333"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                    <!-- Cell Style (Center Alignment for some) -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="#00FF41"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="RANK" Binding="{Binding Rank}" Width="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="OPERATOR / TEAM" Binding="{Binding TeamName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="POINTS" Binding="{Binding Score}" Width="100" IsReadOnly="True" FontWeight="Bold"/>
                    <DataGridTextColumn Header="LAST_SIGNAL" Binding="{Binding LastSubmit}" Width="220" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 4. Footer Console Log -->
            <Border Grid.Row="3" Margin="0,15,0,0" Background="#0F0F0F" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="> root@admin:~$ " FontFamily="Consolas" Foreground="#00FF41"/>
                    <TextBlock Text="monitoring network traffic..." FontFamily="Consolas" Foreground="#888888">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:1" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>
